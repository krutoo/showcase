{
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "paths": {
      "#components/*": ["./src/components/*"]
    }
  }
}
