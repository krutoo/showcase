{
  "name": "@krutoo/showcase",
  "version": "0.0.0",
  "type": "module",
  "description": "Build tool agnostic Storybook alternative",
  "author": "Dmitry Petrov",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "check": "tsc -p . --noEmit",
    "lint": "ls-lint",
    "fmt": "prettier . --write",
    "build": "npm run build:clean && npm run build:js && npm run build:css",
    "build:clean": "rimraf temp dist css",
    "build:js": "tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json && npx babel dist --out-dir dist",
    "build:css": "npx --node-options='--import=tsimp/import' rspack build"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.7",
    "@ls-lint/ls-lint": "^2.3.1",
    "@rspack/cli": "^1.5.5",
    "@rspack/core": "^1.5.5",
    "@types/node": "^22.10.10",
    "@types/react": "^18.3.18",
    "css-loader": "^7.1.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsimp": "^2.0.12",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@krutoo/utils": "^0.0.27",
    "chokidar": "^4.0.3",
    "classnames": "^2.5.1",
    "fast-glob": "^3.3.3",
    "shiki": "^3.12.2",
    "zod": "^4.1.9"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "files": [
    "dist",
    "css",
    "README.md"
  ],
  "exports": {
    "./core": "./dist/core/index.js",
    "./build": "./dist/build/index.js",
    "./runtime": "./dist/runtime/index.js",
    "./runtime-sandbox": "./dist/runtime-sandbox/index.js",
    "./runtime-showcase": "./dist/runtime-showcase/index.js",
    "./runtime-showcase/styles.css": "./css/showcase.css",
    "./showcase.css": "./css/showcase.css"
  }
}
